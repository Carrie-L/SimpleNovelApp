<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/titlebar_big"
        
        >

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:shadowColor="#ff000000"
        android:shadowDx="2"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="点墨文学"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_rightTop"
        android:layout_width="45dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/back_right"
        android:onClick="addText"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="@string/add_text"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn_leftTop"
        android:layout_width="50dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/back_left"
        android:onClick="onlineRead"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="@string/onlineRead"
        android:textColor="#ffffff" />

</RelativeLayout>